body
  .container
    form#login.form-horizontal(method='post')
      legend Add Product
      .control-group
        label.control-label(for='slug') Slug
        .controls
          input#slug(name='slug', type='text', autofocus='autofocus')

      .control-group
        label.control-label(for='title') Title
        .controls
          input#title(name='title', type='text')

      .control-group
        label.control-label(for='description') Description
        .controls
          textarea#description(name='description', rows='10')

      .control-group
        label.control-label(for='price') Price
        .controls
          input#price(name='price', type='number')

      .control-group
        label.control-label(for='thumbnail') Image
        .controls
          input#image(name='image', type='file')

      .control-group
        label.control-label(for='thumbnail') Catagory
        .controls
          input#catagory(name='catagory', type='text')

      .control-group
        .controls
          button.btn.btn-primary(type='submit') Submit
