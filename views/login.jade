extends layout

block content
    form#login.form-horizontal(method='post')
        legend Login
        .control-group
            if (incorrectLogin)
                .alert.alert-danger
                    h4 Uh-oh :(
                    div It looks like the username and/or the password is incorrect.
            label.control-label(for='userEmail') Email
            .controls
                input#userEmail(name='userEmail', type='text', autofocus='autofocus')
        .control-group
            label.control-label(for='password') Password
            .controls
                input#password(name='password', type='password')
        .control-group
            .controls
                button.btn.btn-success(type='submit') Sign in